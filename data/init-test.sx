;;
; vim:ft=lisp
;;

(on-event power-on
  (keep-alive "kyu-server-configuration" "data/configuration/.*\\.sx")

  (keep-alive "ipc-hub")

  (keep-alive "kyu-server-job"))

(on-event ctrl-alt-del
  (power-reset))

(on-event power-reset
  (kill-subprocesses "(kyu-server-configuration|ipc-hub|kyu-server-job)")

  (run #f "echo" "power-reset, nao")
  
  (exit 0))

(on-event power-down
  (kill-subprocesses "(kyu-server-configuration|ipc-hub|kyu-server-job)")

  (run #f "echo" "power-down, nao")
  
  (exit 1))
