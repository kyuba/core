(on-power-on
  (run "rc" "sysinit")

  (run "rc" "boot")

  (run "rc" "default")

  (keep-alive "agetty" "38400" "tty1" "linux")
  (keep-alive "agetty" "38400" "tty2" "linux")
  (keep-alive "agetty" "38400" "tty3" "linux")
  (keep-alive "agetty" "38400" "tty4" "linux")
  (keep-alive "agetty" "38400" "tty5" "linux")
  (keep-alive "agetty" "38400" "tty6" "linux")

  (keep-alive "ipc-hub"))

(on-ctrl-alt-del
  (power-reset))

(on-power-reset
  (run "rc" "reboot")
  (run "power" "reset"))

(on-power-down
  (run "rc" "shutdown")
  (run "power" "down"))
